{
  "name": "gameusers",
  "version": "1.0.0",
  "description": "Game Users Organization",
  "main": "public/react/js/root-build.min.js",
  "scripts": {
    "build": "webpack --display-error-details",
    "watch": "webpack --watch"
  },
  "homepage": "https://gameusers.org/",
  "author": {
    "name": "Game Users"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gameusers/web"
  },
  "bugs": {
    "url": "https://github.com/gameusers/web/issues"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "babel": {
    "presets": [
      "react",
      "env"
    ],
    "plugins": [
      "transform-async-to-generator",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "jquery": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      }
    },
    "extends": "airbnb",
    "rules": {
      "comma-dangle": 0,
      "func-names": 0,
      "max-len": 0,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 20
        }
      ],
      "consistent-return": 0,
      "no-undef": 0,
      "padded-blocks": 0,
      "no-unneeded-ternary": 0,
      "import/no-named-as-default": 0,
      "import/no-named-as-default-member": 0,
      "function-paren-newline": 0,
      "react/no-danger": 0,
      "react/prefer-stateless-function": 0,
      "jsx-a11y/anchor-is-valid": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "comment-whitespace-inside": null,
      "comment-empty-line-before": null,
      "max-empty-lines": null
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "imagesloaded": "^4.1.3",
    "immutable": "^3.8.2",
    "izitoast": "^1.1.5",
    "js-cookie": "^2.1.4",
    "moment": "^2.19.1",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-adsense": "0.0.3",
    "react-bootstrap": "^0.31.5",
    "react-color": "^2.13.8",
    "react-dom": "^15.6.2",
    "react-ga": "^2.3.5",
    "react-masonry-component": "^5.0.7",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-sticky-state": "^2.1.6",
    "react-stripe-checkout": "^2.6.3",
    "redux": "^3.7.2",
    "velocity-react": "^1.3.3",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "postcss-loader": "^2.0.8",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "uglify-js": "^3.1.5",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1"
  }
}
